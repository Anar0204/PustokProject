@model List<Genre>

<div style="align-items:center; justify-content:center; display:flex; ">
    <a class="btn btn-primary btn-sm mb-3" style="height:50px; width:100px" asp-area="Admin" asp-controller="Genre" asp-action="Create">
        <i class="bi bi-plus"></i> Create Genre
    </a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td style="display:flex justify-content:space-between;">
                    <a class="btn btn-success btn-sm mb-3" style="height:30px; width:40px" asp-area="Admin" asp-controller="Genre" asp-action="Edit" asp-route-id="@item.Id">
                        <i class="bi bi-plus"></i> Edit
                    </a>
                    <form asp-area="Admin" asp-controller="Genre" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger btn-sm mb-3" style="height:30px; width:70px" onclick="return confirm('Are you sure you want to delete this author?');">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>